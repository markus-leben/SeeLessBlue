{
  "short_name": "See Less Blue",
  "name": "See Less Twitter Blue Users",
  "version": "0.0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "./static/scripts/background.js"
  },
  "permissions": ["storage", "tabs"],
  "action": {
      "default_popup": "index.html",
      "default_title": "Open the popup"
  },
  "icons": {
      "16": "logo192.png",
      "48": "logo192.png",
      "128": "logo192.png"
  },
  "content_scripts": [
    {
        "matches": ["https://*.twitter.com/*/status/*", "https://*.twitter.com/home"],
        "js": ["./static/scripts/handleTweets.js"]
    }
 ],
 "web_accessible_resources": [
    {
      "resources": ["verified.txt"],
      "matches": ["https://twitter.com/*", "https://mobile.twitter.com/*"]
    }
  ]
}
